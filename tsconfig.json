{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["test", "node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "loader": "ts-node/esm"
  }
}
