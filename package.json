{
  "name": "promise-track",
  "version": "1.0.7",
  "description": "A utility for tracing and monitoring Promise rejections with labels",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./withTrace": {
      "types": "./dist/withTrace.d.ts",
      "import": "./dist/withTrace.js",
      "require": "./dist/withTrace.js"
    },
    "./traceAllSettled": {
      "types": "./dist/traceAllSettled.d.ts",
      "import": "./dist/traceAllSettled.js",
      "require": "./dist/traceAllSettled.js"
    }
  },
  "files": ["dist/index.js", "dist/index.d.ts"],
  "scripts": {
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && esbuild src/index.ts --format=cjs --outdir=dist && esbuild src/index.ts --format=esm --outdir=dist --splitting",
    "test": "NODE_ENV=development tsx test.ts",
    "prepare": "npm run build && husky install",
    "prepublishOnly": "npm test",
    "release": "npm run clean && npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@types/node": "22.13.9",
    "esbuild": "0.25.0",
    "husky": "^8.0.0",
    "semantic-release": "24.2.3",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  },
  "keywords": [
    "promise",
    "trace",
    "ponyfill",
    "async",
    "monitoring"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shubh-Sharma/promise-trace.git"
  },
  "author": "Shubham Sharma"
}
