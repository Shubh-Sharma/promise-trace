{
  "name": "promise-track",
  "version": "1.0.3",
  "description": "A utility for tracing and monitoring Promise rejections with labels",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && esbuild src/index.ts --format=cjs --outfile=dist/index.cjs && esbuild src/index.ts --format=esm --outfile=dist/index.mjs",
    "test": "NODE_ENV=development tsx test.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "release": "npm run clean && npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "promise",
    "trace",
    "ponyfill",
    "async",
    "monitoring"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shubh-Sharma/promise-trace.git"
  },
  "author": "Shubham Sharma"
}
